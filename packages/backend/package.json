{
  "name": "@coauthor/backend",
  "version": "1.0.0",
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsc && concurrently --raw --kill-others \"tsc --watch\" \"nodemon -w ../../dist -q -i ../../dist/public --import ../../dist/instrument.js ../../dist/index.js\"",
    "test": "vitest run --testTimeout 60000 --hookTimeout 60000",
    "test:coverage": "vitest run --coverage --testTimeout 60000 --hookTimeout 60000",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "migrate:up": "cross-env NODE_ENV=development MIGRATE_ACTION=up tsx src/db/migrationRunner.ts",
    "migrate:down": "cross-env NODE_ENV=development MIGRATE_ACTION=down tsx src/db/migrationRunner.ts",
    "migrate:latest": "cross-env NODE_ENV=development MIGRATE_ACTION=latest tsx src/db/migrationRunner.ts",
    "migrate:status": "cross-env NODE_ENV=development tsx src/db/checkMigrationStatus.ts",
    "db:typegen": "kysely-codegen --dialect postgres --env-file .env.development --out-file ./src/db/schema.d.ts",
    "db:create": "dbmate --env-file .env.development create",
    "db:drop": "dbmate --env-file .env.development drop",
    "db:seed": "cross-env NODE_ENV=development tsx src/db/seedDatabase.ts",
    "db:clear": "cross-env NODE_ENV=development tsx src/db/clearDatabase.ts"
  },
  "dependencies": {
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^9.5.0",
    "@sentry/profiling-node": "^9.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "google-auth-library": "^9.2.0",
    "kysely": "^0.27.3",
    "pg": "^8.11.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.4.10",
    "@testcontainers/postgresql": "^10.10.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/pg": "^8.11.4",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.12.0",
    "dbmate": "^2.13.0",
    "kysely-codegen": "^0.14.2",
    "supertest": "^6.3.3",
    "tsx": "^4.15.4"
  },
  "author": "MaffieLab"
}
